<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.wisoft.capstone.dao.DeviceDao">
    <resultMap type="device" id="DeviceResultMap">
        <id column="ID" property="id"/>
        <result column="deviceID" property="deviceID"/>
    </resultMap>

    <select id="selectAll" resultMap="DeviceResultMap">
        SELECT * FROM DEVICES;
    </select>

    <select id="select" parameterType="String" resultMap="DeviceResultMap">
        SELECT * FROM DEVICES WHERE id=#{id};
    </select>

    <insert id="insert" parameterType="user">
        INSERT INTO DEVICES VALUES (#{deviceID} #{id});
    </insert>

    <delete id="delete" parameterType="int">
        DELETE FROM DEVICES WHERE id=#{id};
    </delete>

</mapper>
