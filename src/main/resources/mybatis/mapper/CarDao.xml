<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.wisoft.capstone.dao.InterfaceCarDao">
    <resultMap type="car" id="CarResultMap">
        <id column="customer_id" property="customer_id"/>
        <result column="kind" property="kind"/>
        <result column="license_plate" property="license_plate"/>
    </resultMap>

    <insert id="insert" parameterType="car">
        INSERT INTO car VALUES (#{kind}, #{license_plate}, #{customer_id});
    </insert>

    <select id="selectCars" parameterType="String" resultMap="CarResultMap">
        SELECT * FROM car WHERE customer_id = #{customer_id}
    </select>

    <select id="selectList" resultMap="CarResultMap">
        SELECT * FROM car
    </select>

    <delete id="delete" parameterType="String">
        DELETE FROM car WHERE customer_id = #{customer_id}
    </delete>
</mapper>
